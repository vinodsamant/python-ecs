upstream VierApp {
   ip_hash;
   server VierApp:8000;
 }

 # portal
 server {
   location / {
         proxy_pass http://VierApp/;
         proxy_set_header Host $http_host;
     }
   listen 80;
   client_max_body_size 512M;
   server_name localhost;
   error_log  /var/log/nginx/dev_error.log;
   access_log /var/log/nginx/dev_access.log;

   location /static {
     autoindex on;
     root /usr/src/app/static;
   }
 }
